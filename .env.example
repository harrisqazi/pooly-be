# Database (Postgres)
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME

# Auth (only if verifying Firebase tokens)
JWT_AUDIENCE=firebase

# Provider API keys (sandbox keys go in your private .env, not here)
LITHIC_API_KEY=
PAYTHEORY_API_KEY=
MODERN_TREASURY_API_KEY=

# Provider choices (feature flags)
PROVIDER_ACQUIRING=paytheory
PROVIDER_BANK_RAILS=modern_treasury

# Optional signing secrets for webhook verification (set real values in .env)
PAYTHEORY_SIGNING_SECRET=
MODERN_TREASURY_SIGNING_SECRET=
LITHIC_SIGNING_SECRET=
